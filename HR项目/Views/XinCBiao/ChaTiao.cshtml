@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" href="../../css/table.css" type="text/css">
    <link rel="stylesheet" type="text/css" media="all"
          href="../../javascript/calendar/calendar-win2k-cold-1.css">
    <script type="text/javascript" src="../../javascript/calendar/cal.js"></script>
    <script type="text/javascript" src="../../javascript/comm/comm.js"></script>
    <script type="text/javascript" src="../../javascript/comm/list.js"></script>
    <script type="text/javascript" src="../../javascript/jquery-1.7.2.js"></script>
    <script type="text/javascript" src="../../javascript/calendar-ch.js"></script>
    <script type="text/javascript" src="../../javascript/comm/time.js"></script>
    <link rel="stylesheet" href="../../css/cwcalendar.css" type="text/css"></link>

    <script src="~/Scripts/vue/dist/vue.js"></script>
    <script src="~/Scripts/element-ui/lib/index.js"></script>
    <link href="~/Scripts/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/axios/dist/axios.js"></script>

    <title>无标题文档</title>
</head>

<body>
    <div id="app">
        <form method="post" action="">
            <input type="hidden" name="page.startPage" value="0">
            <table width="100%">
                <tr>
                    <td>
                        <el-breadcrumb separator="/">
                            <el-breadcrumb-item><a href="/Main/main">首页</a></el-breadcrumb-item>
                            <el-breadcrumb-item>人力资源管理</el-breadcrumb-item>
                            <el-breadcrumb-item>薪酬标准管理</el-breadcrumb-item>
                            <el-breadcrumb-item>薪酬标准查询</el-breadcrumb-item>
                        </el-breadcrumb>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div align="right">
                            <input type="button" value="查询" v-on:click="cha()" class="BUTTON_STYLE1" />
                        </div>
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE2">
                <tr>
                    <td width="20%" class="TD_STYLE1">
                        请输入薪酬标准编号
                    </td>
                    <td class="TD_STYLE2">
                        <input type="text" name="standard.standardId" v-model="bh"
                               class="INPUT_STYLE1">
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        请输入关键字
                    </td>
                    <td class="TD_STYLE2">
                        <input type="text" name="utilbean.primarKey" v-model="gjz" class="INPUT_STYLE1">
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        请输入建档时间
                    </td>
                    <td width="84%" class="TD_STYLE2">
                        <input name="utilbean.startDate" v-model="rq1" onclick="aa('utilbean.startDate')" type="text" class="INPUT_STYLE2" id="date_start" style="width:24% " value="" size="30">
                        至 <input type="text" name="utilbean.endDate" v-model="rq2" onclick="aa('utilbean.endDate')" value="" style="width:24% " class="INPUT_STYLE2" id="date_end">
                        （YYYY-MM-DD）
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#app",
            data() {
                return {
                    bh: "",
                    gjz: "",
                    rq1: "",
                    rq2: ""

                }
            },
            methods: {
                cha() {
                    var sql = " change_status = 2 ";
                    if (this.bh != "") {
                        sql += " AND standard_id LIKE CONCAT('%'," + this.bh + ",'%')";
                    }
                    if (this.gzj != undefined) {
                        sql += " AND standard_name LIKE CONCAT('%'," + this.gjz + ",'%')";
                    }
                    if (this.rq1 != "" && this.rq2 != "") {
                        sql += " AND regist_time BETWEEN " + this.rq1 + "  AND  " + this.rq2 + " ";
                    }
                    location.href = "/XinCBiao/MoHuYe?tiao=" + sql;
                }
            },
            mounted: function () {

            }
        });
    </script>
</body>
</html>